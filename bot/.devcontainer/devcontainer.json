{
	"name": "Backend Dev Container",
	"dockerComposeFile": [
		"../../docker-compose.yaml"
	],
	"service": "bot",
	"workspaceFolder": "/bot",
	"customizations": {
		"extensions": [
			"ms-python.python",
			"ms-azuretools.vscode-docker",
			"postman.postman-for-vscode",
			"streetsidesoftware.code-spell-checker"
		],
		"vscode": {
			"settings": {
				"python.pythonPath": "/usr/local/bin/python",
				"cSpell.language": "en,ru"
			},
		}
	},
	"forwardPorts": [
		3000
	],
	"remoteUser": "root"
}